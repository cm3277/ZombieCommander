package com.JustMoser.ZombieCommander.Screens.Levels.SnD.Pack1;

import com.JustMoser.ZombieCommander.Tyrian;
import com.JustMoser.ZombieCommander.Helper.LevelManager;
import com.JustMoser.ZombieCommander.ImageActors.MachineGunHuman;
import com.JustMoser.ZombieCommander.ImageActors.SniperHuman;
import com.JustMoser.ZombieCommander.ImageActors.ZombieSpawn;
import com.JustMoser.ZombieCommander.ImageActors.Blockers.BrickWall;
import com.JustMoser.ZombieCommander.ImageActors.Blockers.Chest;
import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.math.Vector2;

public class SnDPack1Level5 extends SnDLevel
{
	private ZombieSpawn zombieSpawn;
	private Chest chest;
	
    public SnDPack1Level5(Tyrian game)
    {
        super( game, LevelManager.getLevelId(5));
    }
    
    @Override
    public void onShow()
    {
        addSpawns();
        addBlockers();
        addHumans();
        super.addFog();
    }
    
    private void addHumans()
    {
        stage.addActor(MachineGunHuman.create(480*0.9f, Gdx.app.getGraphics().getHeight()*0.9f));
        stage.addActor(MachineGunHuman.create(480*0.85f, Gdx.app.getGraphics().getHeight()*0.85f));
        stage.addActor(SniperHuman.create(480*0.02f, Gdx.app.getGraphics().getHeight()*0.05f));
        stage.addActor(SniperHuman.create(480*0.05f, Gdx.app.getGraphics().getHeight()*0.01f));
    }
    
    public void addSpawns()
    {
    	zombieSpawn = ZombieSpawn.create(new Vector2(0, 0));
    	zombieSpawn.setPosition(480/2 - zombieSpawn.getWidth()/2, Gdx.app.getGraphics().getHeight()/2 - zombieSpawn.getHeight()/2);
        stage.addActor(zombieSpawn);
        //stage.addActor(ZombieSpawn.create(new Vector2(480*0.2f,Gdx.app.getGraphics().getHeight()*0.95f)));
    }
   
    private void addBlockers()
    {
    	chest = Chest.create(480*0.8f, Gdx.app.getGraphics().getHeight()*0.75f);
        stage.addActor(chest);
        stage.addActor(Chest.create(480*0.15f, Gdx.app.getGraphics().getHeight()*0.2f));
        
        BrickWall brickWall = BrickWall.create(480*0.55f, Gdx.app.getGraphics().getHeight()*0.6f );
        brickWall.setRotation(-45);
        stage.addActor(brickWall);
        
        BrickWall brickWall2 = BrickWall.create(480*0.3f, Gdx.app.getGraphics().getHeight()*0.35f );
        brickWall2.setRotation(-45);
        stage.addActor(brickWall2);
    }
}